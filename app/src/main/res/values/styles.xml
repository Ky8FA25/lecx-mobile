<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RoundedShapeOval" parent="">
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Material3.Corner.Full</item>
    </style>
    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="FragmentContainerStyle">
        <!-- Tránh bị che bởi AppBar và BottomNav -->
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">72dp</item>

        <!-- Nền chung -->
        <item name="android:background">#F5F5F5</item>

        <!-- Cho phép cuộn nếu nội dung dài -->
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="Widget.App.Button.GoogleLogin" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">56dp</item>
        <item name="cornerRadius">28dp</item>
        <item name="backgroundTint">@android:color/white</item>

        <item name="strokeColor">@color/primary</item>
        <item name="strokeWidth">2dp</item>

        <item name="android:textColor">@color/black_or_dark_gray</item>
        <item name="icon">@drawable/ic_google_logo</item>
        <item name="iconTint">@null</item>
        <item name="iconGravity">textStart</item>

        <item name="iconSize">32dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>