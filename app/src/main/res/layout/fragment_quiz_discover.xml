<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".views.Quiz.QuizDiscoverFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Search View -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="28dp"
            app:cardBackgroundColor="@color/card_background"
            app:strokeWidth="0dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="4dp"
                android:paddingTop="2dp"
                android:paddingEnd="4dp"
                android:paddingBottom="2dp"
                app:boxBackgroundMode="none"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:hintEnabled="false"
                app:startIconContentDescription="Tìm kiếm"
                app:startIconDrawable="@android:drawable/ic_menu_search"
                app:startIconTint="@color/primary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etSearch"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:background="@android:color/transparent"
                    android:hint="Tìm kiếm quiz, tác giả..."
                    android:textColorHint="@color/text_secondary"
                    android:imeOptions="actionSearch"
                    android:inputType="text"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:gravity="center_vertical" />

            </com.google.android.material.textfield.TextInputLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- RecyclerView for Quizzes -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvQuizzes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:nestedScrollingEnabled="true"
            tools:listitem="@layout/item_quiz_vertical" />

        <!-- Empty State -->
        <TextView
            android:id="@+id/tvEmpty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Không tìm thấy quiz nào"
            android:textSize="16sp"
            android:textColor="#999999"
            android:gravity="center"
            android:padding="32dp"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Loading Overlay -->
    <include
        android:id="@+id/loadingOverlay"
        layout="@layout/loading_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true" />

</FrameLayout>