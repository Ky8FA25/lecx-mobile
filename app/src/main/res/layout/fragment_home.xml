<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    tools:context=".views.Home.HomeFragment">

    <!-- Tiêu đề -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Lecx Mobile"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start learning with flashcards!"
        android:textSize="16sp"
        android:textColor="#666666"
        android:layout_marginBottom="32dp" />

    <!-- Nút test đầu tiên -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnTestFlashcard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test FlashCard"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        app:cornerRadius="12dp"
        android:backgroundTint="@color/primary"
        android:layout_marginBottom="16dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnTestAddQuiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test Add Quiz"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        app:cornerRadius="12dp"
        android:backgroundTint="@color/primary"
        android:layout_marginBottom="16dp" />

    <!-- Card chứa button test thứ hai -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        android:layout_marginBottom="16dp"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Test Navigation"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#333333"
                android:layout_marginBottom="12dp" />

            <!-- Nút test thứ hai -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTestQuizDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Xem Quiz Detail (Quiz ID = 1)"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:backgroundTint="#1976D2"
                app:cornerRadius="8dp"
                android:paddingVertical="12dp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Ghi chú -->

    <!-- Nội dung khác -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nội dung trang chủ sẽ được thêm ở đây..."
        android:textColor="#666666"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginTop="32dp" />

</LinearLayout>
